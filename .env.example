# Database
DATABASE_URL=sqlite:///./marketplace.db

# API server base URL (used by CLI and client_llm)
API_BASE_URL=http://127.0.0.1:8000

# Ollama
OLLAMA_URL=http://localhost:11434/api/generate
OLLAMA_TIMEOUT=30
ROUTER_MODEL=qwen2.5:14b-instruct
ANSWER_MODEL=qwen2.5:14b-instruct

# Router scoring weights (must sum to 1.0)
W_CAP=0.70
W_LAT=0.20
W_COST=0.10

# Conversation memory
MEMORY_MAX_MESSAGES=6

# Provider execution timeout (seconds)
EXECUTOR_TIMEOUT=20
